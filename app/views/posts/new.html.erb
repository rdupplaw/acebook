<!DOCTYPE html>
<head>
<title>New Post</title>
</head>
<body>
  <div class="container" >
    <%= form_for @post do |form| %>
      <div class = "newpost">
        <div class="textarea">
        <%= form.label :message %>
        <%= form.text_area :message %>
        <br>
        </div>
      </div>

      <div class = "newpost">
        <%= form.label :image %>
        <%= form.file_field :image %>
        <br><br>
        </div>
        <div class = "newpost">
      <%= form.submit "Submit" %>
      </div>
      <br>
    <% end %>

  </div>
</body>
</html>